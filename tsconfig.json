{
    "compileOnSave": true,
    "compilerOptions": {
        "noEmitOnError": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "pretty": false,
        "newLine": "LF",
        "listFiles": true,
        "listEmittedFiles": true,
        "outFile": "tests.js",
        "module": "commonjs",
        "types" : ["cron"],
        "lib": ["es6"]
    },
    "include": [
        "extensions/*.ts",
        "extensions/payment/*.ts"
    ],
    "files": [
        "tests.ts"
    ]
}